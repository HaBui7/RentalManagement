<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefHeight="750.0" prefWidth="1000.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Main HBox for Navbar and Profile -->
        <HBox prefHeight="750.0" prefWidth="1000.0" style="-fx-background-color: #ffffff; -fx-border-color: lightgray; -fx-border-radius: 10; -fx-background-radius: 10;">
            <children>
                <!-- Include Navbar -->
<!--                <fx:include source="navBar.fxml" />-->

                <!-- Profile Section -->
                <VBox alignment="CENTER" prefHeight="748.0" prefWidth="652.0" spacing="20" style="-fx-padding: 30;">
                    <!-- Title -->
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Account Profile">
                  <font>
                     <Font size="36.0" />
                  </font></Label>
               <HBox prefWidth="200.0" spacing="10.0">
                  <children>
                     <VBox spacing="5">
                        <children>
                           <Label text="User ID:" />
                           <HBox prefHeight="0.0" prefWidth="590.0" spacing="5.0">
                              <children>
                                 <TextField fx:id="userIdField" prefHeight="25.0" prefWidth="277.0" promptText="Enter User ID" style="-fx-background-color: #d3d3d3;" />
                                 <Button mnemonicParsing="false" style="-fx-background-color: none;">
                                    <graphic>
                                       <FontIcon iconLiteral="bi-pencil-fill" iconSize="20" />
                                    </graphic>
                                 </Button>
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                     <VBox spacing="5">
                        <children>
                           <Label text="Name:" />
                           <HBox prefHeight="0.0" prefWidth="590.0" spacing="5.0">
                              <children>
                                 <TextField fx:id="userIdField1" prefHeight="25.0" prefWidth="287.0" promptText="Enter User's Name" style="-fx-background-color: #d3d3d3;" />
                                 <Button mnemonicParsing="false" style="-fx-background-color: none;">
                                    <graphic>
                                       <FontIcon iconLiteral="bi-pencil-fill" iconSize="20" />
                                    </graphic>
                                 </Button>
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                  </children>
               </HBox>
               <HBox prefWidth="200.0" spacing="10.0">
                  <children>
   
                              <!-- Date of Birth -->
                           <VBox spacing="5">
                               <Label text="Date of Birth:" />
                        <HBox prefHeight="0.0" prefWidth="590.0" spacing="5.0">
                           <children>
                              <TextField fx:id="userIdField11" prefHeight="25.0" prefWidth="297.0" promptText="YYYY-MM-DD" style="-fx-background-color: #d3d3d3;" />
                              <Button mnemonicParsing="false" style="-fx-background-color: none;">
                                 <graphic>
                                    <FontIcon iconLiteral="bi-pencil-fill" iconSize="20" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>
                           </VBox>
   
                              <!-- Contact Information -->
                           <VBox spacing="5">
                               <Label text="Contact Information:" />
                        <HBox prefHeight="0.0" prefWidth="590.0" spacing="5.0">
                           <children>
                              <TextField fx:id="userIdField111" prefHeight="25.0" prefWidth="276.0" promptText="Enter Contact Information" style="-fx-background-color: #d3d3d3;" />
                              <Button mnemonicParsing="false" style="-fx-background-color: none;">
                                 <graphic>
                                    <FontIcon iconLiteral="bi-pencil-fill" iconSize="20" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>
                           </VBox>
                  </children>
               </HBox>

                    <!-- Confirm Button -->
                    <Button prefHeight="38.0" prefWidth="100.0" style="-fx-background-color: #A7A4A1; -fx-text-fill: white; -fx-font-weight: bold;" text="Confirm">
                  <VBox.margin>
                     <Insets top="30.0" />
                  </VBox.margin></Button>
                </VBox>
            </children>
        </HBox>
    </children>
</StackPane>
