<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="750" prefWidth="650" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="hoangvaha.frontend.controllers.TenantControllers.TenantController">

    <!-- Main Content Area -->
    <HBox alignment="CENTER_LEFT" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0">
        <!--        &lt;!&ndash; Include Navigation Bar &ndash;&gt;-->
        <!--        <fx:include source="tenantNavBar.fxml"/>-->

        <!-- Right Content -->
        <VBox alignment="TOP_CENTER" prefHeight="750" prefWidth="797.0" spacing="20.0">
            <!-- Top Box: Table Section -->
            <VBox alignment="TOP_CENTER" prefWidth="750.0" spacing="10">
                <HBox alignment="CENTER_LEFT" prefHeight="40" spacing="10">
                    <Label text="Selection:"/>
                    <RadioButton fx:id="commercialRadioButton" text="Commercial Property"/>
                    <RadioButton fx:id="residentialRadioButton" text="Residential Property"/>
                    <TextField fx:id="searchTextField" prefWidth="200" promptText="Search by ID"/>
                    <Button fx:id="searchButton" text="Search"/>
                    <Button fx:id="sortButton" text="Sorting"/>
                </HBox>

                <ScrollPane fitToHeight="true" fitToWidth="true">
                    <TableView fx:id="propertyTableView">

                    </TableView>
                </ScrollPane>
            </VBox>
            <!-- Bottom Box: Rent Now Section -->
            <VBox alignment="CENTER" prefWidth="750" spacing="10">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Rent now !"/>
                <HBox alignment="CENTER" prefHeight="40" spacing="10">
                    <TextField fx:id="propertyIdTextField" prefWidth="400"
                               promptText="Insert the ID of property you want to rent here..."/>
                    <Button fx:id="rentButton" text="Rent"/>
                </HBox>
                <HBox alignment="CENTER" prefHeight="40" spacing="20">
                    <VBox alignment="CENTER">
                        <Label text="Date Rented:"/>
                        <DatePicker fx:id="dateRentedPicker"/>
                    </VBox>
                    <VBox alignment="CENTER">
                        <Label text="Date Returned:"/>
                        <DatePicker fx:id="dateReturnedPicker"/>
                    </VBox>
                </HBox>
            </VBox>
            <HBox.margin>
                <Insets left="10.0" right="10.0"/>
            </HBox.margin>
        </VBox>
    </HBox>
</AnchorPane>
